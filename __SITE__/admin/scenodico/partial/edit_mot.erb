<% 
#
# Formulaire d'édition du mot du scénodico
#

require_form_support

%>
<form id="edit_mot_form" action="" method="POST">
  <input type="hidden" name="operation" id="" value="save_mot" />
  <div>

    <%# -------------- MOT ------------------  %>

    <input type="text" name="mot[mot]" id="mot_mot" class="medium main" value="<%= mot.mot %>" />
    
    <%# -------------- CATÉGORIE ------------------  %>

    <input type="text" name="mot[categories]" id="mot_categories" class="medium" value="<%= mot.categories %>" />

    <%# -------------- ID ------------------  %>

    <input type="text" class="short" name="mot[id]" id="mot_id" value="<%= mot.id %>" />

  </div>
  <div>
    
    <%# -------------- DÉFINITION ------------------  %>

    <label>Définition</label>
    <textarea placeholder="Définition du mot" name="mot[definition]" id="mot_definition" class="long"><%= mot.definition %></textarea>

  </div>
  <div>
    <%= Scenodico::Mot.menu_mots.sub(/__TYPE__/,'relatifs') %>
    <span id="mots_relatifs"><%= mot.formated_relatifs %></span>
    <input type="hidden" name="mot[relatifs]" id="mot_relatifs" value="<%= mot.relatifs %>" />
  </div>
  <div>
    <input type="hidden" name="mot[synonymes]" id="mot_synonymes" value="<%= mot.synonymes %>" />
  </div>
  <div>
    <input type="hidden" name="mot[contraires]" id="mot_contraires" value="<%= mot.contraires %>" />
  </div>
  <div>
    
    <%# -------------- LIENS ------------------  %>

    <label>Liens <span>(href::titre)</span></label>
    <textarea placeholder="Liens"name="mot[liens]" id="mot_liens" class="long"><%= mot.liens %></textarea>

  </div>
  <div class="buttons">
    <input type="submit" class="main" value="<%= mot.id ? 'Enregistrer' : 'Créer' %>" />
  </div>
</form>
